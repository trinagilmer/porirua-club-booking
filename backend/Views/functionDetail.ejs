<!DOCTYPE html>
<html>
<head>
  <title>Run Sheet - <%= fn.event_name %></title>
  <style>
    body { font-family: Arial, sans-serif; margin: 20px; }
    h1 { text-align: center; }
    .section { margin-bottom: 20px; }
    table { width: 100%; border-collapse: collapse; margin-top: 10px; }
    th, td { border: 1px solid #ddd; padding: 8px; }
    th { background: #f4f4f4; }
    .print-btn { margin: 15px 0; }
  </style>
</head>
<body>
  <h1>Run Sheet</h1>

  <div class="section">
    <h2>Event Details</h2>
    <p><strong>Event:</strong> <%= fn.event_name %></p>
    <p><strong>Room:</strong> <%= fn.room %></p>
    <p><strong>Guests:</strong> <%= fn.attendees %></p>
    <p><strong>Catering:</strong> <%= fn.catering ? "Yes" : "No" %></p>
    <p><strong>Bar Service:</strong> <%= fn.bar_service ? "Yes" : "No" %></p>
    <p><strong>Notes:</strong> <%= fn.notes || "N/A" %></p>
  </div>

  <div class="section">
    <h2>Contact Information</h2>
    <p><strong>Name:</strong> <%= fn.contact_name %></p>
    <p><strong>Phone:</strong> <%= fn.contact_phone %></p>
    <p><strong>Email:</strong> <%= fn.contact_email %></p>
  </div>

  <div class="section">
    <h2>Services</h2>
    <% if (services.length > 0) { %>
      <table>
        <tr>
          <th>Service</th>
          <th>Qty</th>
          <th>Price</th>
          <th>Notes</th>
        </tr>
        <% services.forEach(svc => { %>
          <tr>
            <td><%= svc.service_name %></td>
            <td><%= svc.qty %></td>
            <td><%= svc.price || "" %></td>
            <td><%= svc.notes || "" %></td>
          </tr>
        <% }) %>
      </table>
    <% } else { %>
      <p>No additional services selected.</p>
    <% } %>
  </div>

  <button class="print-btn" onclick="window.print()">Print Run Sheet</button>
</body>
</html>

