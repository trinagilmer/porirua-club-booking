<!DOCTYPE html>
<html lang="en">
<head>
  <html><link rel="stylesheet" href="/css/main.css">
  <meta charset="UTF-8" />
  <title>Function ‚Äì <%= fn.event_name %></title>
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <style>
    body { font-family: system-ui, Arial, sans-serif; margin: 24px; }
    .row { display:flex; gap:8px; flex-wrap:wrap; align-items:center; }
    .btn { padding:8px 12px; border:1px solid #e5e7eb; border-radius:8px; background:#fff; text-decoration:none; cursor:pointer; }
    .btn.primary { border-color:#93c5fd; color:#1d4ed8; }
    .btn.danger { border-color:#fecaca; color:#b91c1c; }
    .btn.success { border-color:#bbf7d0; color:#166534; }
    .card { border:1px solid #e5e7eb; border-radius:12px; padding:16px; margin:12px 0; background:#fff; }
    table { width:100%; border-collapse:collapse; background:#fff; }
    th, td { padding:8px; border-bottom:1px solid #e5e7eb; text-align:left; vertical-align:top; }
    h2 { margin:0 0 8px 0; }
    .muted { color:#6b7280; }
    .two { display:grid; grid-template-columns: 1fr 1fr; gap:12px; }
    @media (max-width: 900px) { .two { grid-template-columns: 1fr; } }
    .pill { padding:2px 8px; border-radius:999px; font-size:.85rem; display:inline-block; text-transform:capitalize; }
    .pill.confirmed { background:#DCFCE7; color:#065F46; }
    .pill.cancelled { background:#FEE2E2; color:#991B1B; }
  </style>
</head>
<body>
  <% const isCancelled = String(fn.status || 'confirmed').toLowerCase() === 'cancelled'; %>

  <div class="row" style="justify-content:space-between;">
    <div class="row">
      <a class="btn" href="/staff/functions">‚¨Ö Back</a>
      <h1 style="margin:0;"><%= fn.event_name %></h1>
      <span class="pill <%= isCancelled ? 'cancelled' : 'confirmed' %>"><%= isCancelled ? 'cancelled' : 'confirmed' %></span>
    </div>
    <div class="row">
      <a class="btn" href="/staff/calendar/weekly">üìÖ Calendar</a>
      <a class="btn" href="/staff/functions/<%= fn.id %>/edit">‚úèÔ∏è Edit</a>
      <a class="btn primary" href="/staff/functions/<%= fn.id %>/run-sheet?all=1" target="_blank">üñ®Ô∏è Run Sheet</a>
      <% if (isCancelled) { %>
        <button class="btn success" id="restoreBtn">Restore</button>
      <% } else { %>
        <button class="btn danger" id="cancelBtn">Cancel</button>
      <% } %>
    </div>
  </div>

  <div class="two">
    <div class="card">
      <h2>Event</h2>
      <div><strong>Date:</strong> <%= dateStr %><%= timeStr ? (' ¬∑ ' + timeStr) : '' %></div>
      <div><strong>Room:</strong> <%= fn.room || '' %></div>
      <div><strong>Attendees:</strong> <%= fn.attendees ?? '' %></div>
      <div><strong>Status:</strong> <%= (fn.status || 'confirmed') %></div>
      <% if (fn.notes) { %>
        <div class="muted" style="margin-top:6px;"><strong>Notes:</strong> <%= fn.notes %></div>
      <% } %>
    </div>

    <div class="card">
      <h2>Contact</h2>
      <div><strong>Name:</strong> <%= fn.contact_name || '' %></div>
      <div><strong>Phone:</strong> <%= fn.contact_phone || '' %></div>
      <div><strong>Email:</strong> <%= fn.contact_email || '' %></div>
    </div>
  </div>

  <div class="card">
    <h2>Services</h2>
    <% if ((services||[]).length === 0) { %>
      <div class="muted">No additional services.</div>
    <% } else { %>
      <table>
        <thead><tr><th>Service</th><th>Qty</th><th>Price</th><th>Notes</th></tr></thead>
        <tbody>
          <% services.forEach(s => { %>
            <tr>
              <td><%= s.service_name %></td>
              <td><%= s.qty %></td>
              <td><%= s.price != null ? ('$' + Number(s.price).toFixed(2)) : '' %></td>
              <td><%= s.notes || '' %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } %>
  </div>

  <div class="card">
    <h2>Menus</h2>
    <% if ((menus||[]).length === 0) { %>
      <div class="muted">No menus.</div>
    <% } else { %>
      <table>
        <thead><tr><th>Menu</th><th>Qty</th><th>Price</th><th>Notes</th></tr></thead>
        <tbody>
          <% menus.forEach(m => { %>
            <tr>
              <td><%= m.name %></td>
              <td><%= m.qty %></td>
              <td>$<%= Number(m.price||0).toFixed(2) %></td>
              <td><%= m.notes || '' %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } %>
  </div>

  <div class="two">
    <div class="card">
      <h2>Bar</h2>
      <div><strong>Service:</strong> <%= fn.bar_service ? 'Yes' : 'No' %></div>
      <div><strong>Type:</strong> <%= fn.bar_type || '‚Äî' %></div>
      <% if (fn.bar_type === 'tab') { %>
        <div><strong>Tab Amount:</strong> $<%= Number(fn.bar_tab_amount||0).toFixed(2) %></div>
      <% } %>
      <div><strong>Bar Notes:</strong> <%= fn.bar_notes || '‚Äî' %></div>
    </div>

    <div class="card">
      <h2>Notes</h2>
      <% if (fn.notes) { %>
        <div><%= fn.notes %></div>
      <% } else { %>
        <div class="muted">No notes.</div>
      <% } %>
    </div>
  </div>

  <div class="card">
    <h2>Totals</h2>
    <div>Services: <strong>$<%= (totals && typeof totals.svcTotal === 'number') ? totals.svcTotal.toFixed(2) : '0.00' %></strong></div>
    <div>Menus: <strong>$<%= (totals && typeof totals.menuTotal === 'number') ? totals.menuTotal.toFixed(2) : '0.00' %></strong></div>
    <div><strong>Grand Total: $<%= (totals && typeof totals.total_value === 'number') ? totals.total_value.toFixed(2) : '0.00' %></strong></div>
  </div>

  <script>
    async function updateStatus(next) {
      try {
        const r = await fetch('/api/functions/<%= fn.id %>/status', {
          method:'PATCH',
          headers:{ 'Content-Type':'application/json' },
          body: JSON.stringify({ status: next })
        });
        if (!r.ok) throw new Error('Update failed');
        location.reload();
      } catch (e) {
        alert(e.message || 'Update failed');
      }
    }

    document.getElementById('cancelBtn')?.addEventListener('click', () => {
      if (confirm('Cancel this function?')) updateStatus('cancelled');
    });

    document.getElementById('restoreBtn')?.addEventListener('click', () => {
      if (confirm('Restore this function?')) updateStatus('confirmed');
    });
  </script>
</body>
</html>
