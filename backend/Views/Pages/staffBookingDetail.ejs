<%- include('../Partials/header', { active: 'bookings' }) %>
<div class="container">
  <h1>Booking Detail</h1>
  <div class="card">
    <h3>Contact</h3>
    <p><strong>Name:</strong> <%= booking.name %></p>
    <p><strong>Email:</strong> <%= booking.email %></p>
    <p><strong>Phone:</strong> <%= booking.phone || '-' %></p>
  </div>

  <div class="card" style="margin-top:12px;">
    <h3>Event</h3>
    <p><strong>Guests:</strong> <%= booking.guests || '-' %></p>
    <p><strong>Status:</strong>
      <span class="pill <%= booking.status %>"><%= booking.status %></span>
    </p>
    <p><strong>Date/Time:</strong>
      <%= booking.datetime ? new Date(booking.datetime).toLocaleString('en-NZ') : 'N/A' %>
    </p>
  </div>

  <% if (booking.function_id) { %>
    <div class="card" style="margin-top:12px;">
      <h3>Linked Function</h3>
      <p>ID: <%= booking.function_id %></p>
      <p>Status: <span class="pill <%= booking.function_status %>"><%= booking.function_status %></span></p>
      <a href="/api/functions/<%= booking.function_id %>/edit" class="btn primary">Edit Function</a>
    </div>
  <% } else { %>
    <form action="/api/functions" method="post" style="margin-top:12px;">
      <input type="hidden" name="booking_id" value="<%= booking.id %>">
      <button class="btn primary">Convert to Function</button>
    </form>
  <% } %>

  <div class="toolbar" style="margin-top:12px;">
    <a href="/staff/bookings" class="btn">‚Üê Back</a>
  </div>
</div>
