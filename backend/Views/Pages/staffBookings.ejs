<%- include('../Partials/header', { active: 'bookings' }) %>
<div class="container">
  <h1>Bookings Pipeline</h1>
  <table class="pc-table">
    <thead>
      <tr>
        <th>Stage</th><th>Name</th><th>Pax</th><th>Date/Time</th><th>Status</th>
      </tr>
    </thead>
    <tbody>
      <% bookings.forEach(b => { %>
        <tr>
          <td><%= b.stage %></td>
          <td><a href="/staff/bookings/<%= b.booking_id %>"><%= b.name %></a></td>
          <td><%= b.guests || '' %></td>
          <td><%= b.event_at ? new Date(b.event_at).toLocaleString('en-NZ') : '' %></td>
          <td><span class="pill <%= b.function_status || b.booking_status %>"><%= b.function_status || b.booking_status %></span></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
